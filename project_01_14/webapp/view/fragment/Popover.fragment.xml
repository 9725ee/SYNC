<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Read" press="onRead" />
			</OverflowToolbar>
		</footer>
		<VBox class = "sapUismallMargin">
            <Label text="Member ID:"/>
            <Input value = "{popover>/Memberid}"/>
        </VBox>
		<VBox class = "sapUismallMargin">
            <Label text="Member Name:"/>
            <Input value = "{popover>/Membername}"/>
        </VBox>
	</Popover>
</core:FragmentDefinition>